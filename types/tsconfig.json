{
  "$schema": "http://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "es2016",                                  
    "module": "commonjs",                               
    "rootDir": "./src",                                
    "moduleResolution": "node",                       
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                             
    "noImplicitAny": true,                     
    "skipLibCheck": true
  }
}
